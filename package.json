{
	"name": "nspin",
	"description": "Lightweight and efficient Node.js spinner package using native features",
	"version": "1.3.0",
	"license": "MIT",
	"author": "ManuelGil",
	"sponsor": {
		"url": "https://github.com/sponsors/ManuelGil"
	},
	"engines": {
		"node": ">=22.0.0"
	},
	"keywords": [
		"cli",
		"lightweight",
		"native",
		"Node.js",
		"nodejs",
		"nspin",
		"spinner"
	],
	"homepage": "https://github.com/ManuelGil/nspin",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/ManuelGil/nspin.git"
	},
	"bugs": {
		"url": "https://github.com/ManuelGil/nspin/issues"
	},
	"main": "dist/index.js",
	"module": "dist/index.mjs",
	"types": "dist/index.d.ts",
	"exports": {
		".": {
			"import": "./dist/index.mjs",
			"require": "./dist/index.js"
		},
		"./package.json": "./package.json"
	},
	"sideEffects": false,
	"files": [
		"dist",
		"CHANGELOG.md",
		"README.md",
		"!dist/**/*.map"
	],
	"scripts": {
		"clean": "node -e \"require('fs').rmSync('dist', { recursive: true, force: true })\"",
		"build": "tsup",
		"build:prod": "cross-env NODE_ENV=production tsup",
		"pretest": "npm run clean && npm run build",
		"test": "vitest run",
		"test:watch": "vitest",
		"format": "biome format --write",
		"lint": "biome lint --write",
		"lint:check": "biome check --write",
		"ts-check": "tsc --noEmit",
		"check-format": "prettier --check .",
		"check-exports": "attw --pack .",
		"link": "cd dist && npm link",
		"audit": "npm audit",
		"validate": "npm run lint:check && npm run test && npm run audit",
		"ci": "npm run clean && npm run build && npm run validate",
		"prepublishOnly": "npm run build:prod",
		"publish:local": "npm publish --registry http://localhost:4873",
		"publish:public": "npm publish --access=public",
		"prepare": "husky",
		"release": "release-it"
	},
	"devDependencies": {
		"@arethetypeswrong/cli": "^0.17.4",
		"@biomejs/biome": "1.9.4",
		"@commitlint/cli": "^19.8.0",
		"@commitlint/config-conventional": "^19.8.0",
		"@release-it/conventional-changelog": "^10.0.0",
		"@release-it/keep-a-changelog": "^6.0.0",
		"@types/node": "^22.13.10",
		"cross-env": "^7.0.3",
		"globals": "^16.0.0",
		"husky": "^9.1.7",
		"lint-staged": "^15.4.3",
		"release-it": "^18.1.2",
		"tsup": "^8.4.0",
		"typescript": "^5.8.2",
		"vitest": "^3.0.8"
	},
	"lint-staged": {
		"*.ts": [
			"biome format --write",
			"biome lint --write"
		]
	},
	"release-it": {
		"git": {
			"commitMessage": "chore: :bookmark: release ${version}"
		},
		"github": {
			"release": true
		},
		"npm": {
			"publish": false
		},
		"plugins": {
			"@release-it/keep-a-changelog": {
				"filename": "CHANGELOG.md"
			}
		}
	}
}
